{
  "name": "Fermentrack",
  "version": "0.1.0",
  "slug": "fermentrack",
  "description": "Fermentrack for Home Assistant",
  "startup": "application",
  "boot": "auto",
  "image": "ghcr.io/hassio-addons/fermentrack",
  "arch": ["aarch64", "amd64"],
  "webui": "http://[HOST]:[PORT:8080]",
  "ports": {
    "8080/tcp": 8080
  },
  "map": [
    "config:rw",
    "ssl:rw"
  ],
  "options": {
    "web_port": 8080,
    "persistence": "/config/fermentrack/",
    "debug": false,
    "allow_remote_access": false,
    "enable_ssl": false,
    "ssl_cert_path": "/config/ssl/fullchain.pem",
    "ssl_key_path": "/config/ssl/privkey.pem",
    "log_level": "INFO",
    "log_file": "/config/fermentrack/fermentrack.log",
    "timezone": "UTC",
    "default_language": "en",
    "auto_update": true,
    "update_interval": 60,
    "max_log_size": 5000000,
    "log_rotate": true,
    "allowed_ips": []
  },
  "schema": {
    "web_port": "int",
    "persistence": "str",
    "debug": "bool",
    "allow_remote_access": "bool",
    "enable_ssl": "bool",
    "ssl_cert_path": "str",
    "ssl_key_path": "str",
    "log_level": "str",
    "log_file": "str",
    "timezone": "str",
    "default_language": "str",
    "auto_update": "bool",
    "update_interval": "int",
    "max_log_size": "int",
    "log_rotate": "bool",
    "allowed_ips": "list(str)"
  }
}
